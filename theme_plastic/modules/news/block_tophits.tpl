<!-- BEGIN: main -->
 <section class="content-inner-2 post-topics">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="section-head row">
					<div class="col-sm-8">
						<h3 class="title">BÀI VIẾT MỚI NHẤT</h3>
					</div>
					<div class="col-sm-4 text-sm-end">
						<div class="portfolio-pagination d-inline-block">
							<div class="btn-prev swiper-button-prev2"><i class="las la-arrow-left"></i></div>
							<div class="btn-next swiper-button-next2"><i class="las la-arrow-right"></i></div>
						</div>
					</div>
				</div>
				<div class="swiper-container similar-slider lightgallery">
					<div class="swiper-wrapper">
					<!-- BEGIN: newloop -->
						<div class="swiper-slide">
							<div class="dlab-card style-1 shadow m-b30">
								<div class="dlab-media">
								<!-- BEGIN: imgblock -->
									<a href="{blocknews.link}"><img src="{blocknews.imgurl}" alt="{blocknews.title}"></a>
								<!-- END: imgblock -->
								</div>
								<div class="dlab-info">
									<div class="dlab-meta">
										<ul>
											<li class="post-date">Ngày đăng: {blocknews.publtime}</li>
										</ul>
									</div>
									<h4 class="dlab-title"><a href="{blocknews.link}">{blocknews.title}</a></h4>
									<p>{blocknews.hometext_clean}</p>
									<a href="{blocknews.link}" class="btn btn-primary btn-sm light shadow-none effect-1"><span>Xem chi tiết</span></a>
								</div>
							</div>
						</div>
					 <!-- END: newloop -->	
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- END: main -->
